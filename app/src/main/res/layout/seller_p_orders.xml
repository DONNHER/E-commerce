<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/order_rider"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom= "0dp">
        <GridLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--    Header-->
    <GridLayout
        android:id="@id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:contentDescription="TODO"
            android:src="@drawable/regis"
            android:layout_rowSpan="5"
            android:padding="10dp"
            android:background="@drawable/home_green"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="ORDER# "
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Andre Dulay"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/restaurant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="Andre Dulay"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restaurant3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="P2, Musuan, Maramag, Bukidnon"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="Quantity: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/units3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="end"
            android:text="1x"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/units5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_gravity="end"
            android:text="1x"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_row="3"
                android:layout_column="3"
                android:paddingLeft="5dp"
                android:src="@drawable/p" />

            <TextView
                android:id="@+id/units4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="end"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>
        <!-- Footer -->

    </GridLayout>
    <GridLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile">
        <Button
            android:id="@+id/iconReturn"
            android:layout_width="107dp"
            android:layout_height="38dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="start"
            android:background="@drawable/red"
            android:text="Cancel"
            android:textColor="@color/white">

        </Button>
        <Button
            android:id="@+id/iconApproved"
            android:layout_width="107dp"
            android:layout_height="38dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="end"
            android:background="@drawable/green"
            android:text="Approved"
            android:textColor="@color/white">

        </Button>

    </GridLayout>


    <!--    Footer-->
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
