<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Status Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10:49"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_signal"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi"
            android:layout_marginEnd="4dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_battery" />
    </LinearLayout>

    <!-- Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Orders"
            android:textColor="#000000"
            android:background="@drawable/tab_selected_bg"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Standard"
            android:textColor="#999999"
            android:background="@drawable/tab_unselected_bg" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Scheduled"
            android:textColor="#999999"
            android:background="@drawable/tab_unselected_bg" />
    </LinearLayout>

    <!-- Orders List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Order 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/order_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_delivery_truck"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order #0001"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Ready for Delivery"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance: 2 miles"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:text="View Order"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/green_button_bg"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <!-- Order 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/order_card_bg"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_preparing"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order #0002"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: Preparing"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance: 1.5 miles"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <Button
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:text="View Order"
                    android:textSize="10sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/green_button_bg"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Action Button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Delivery"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="@drawable/primary_button_bg"
        android:layout_margin="16dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingVertical="8dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_active"
                android:tint="#4CAF50" />

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/active_dot"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_orders"
                android:tint="#CCCCCC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_profile"
                android:tint="#CCCCCC" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>