<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#E6F4F1"
    >

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:padding="10dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/undo"
                android:onClick="back"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/regis"
                android:layout_gravity="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Welcome"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center"/>
        </GridLayout>
    </LinearLayout>
<!--    Header-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cook"
                android:textSize="14sp"
                android:textColor="@color/black">
            </TextView>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="My Recipes"
                    android:textSize="14sp"
                    android:background="@drawable/green">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:background="@drawable/edit_background"
                    android:text="My Profile"
                    android:textSize="14sp">
                </TextView>
            </GridLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#2CB57A"
                android:padding="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="end"
                    android:text="My Favorites"
                    android:textSize="14sp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/pizza1"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/burger"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/piza"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/burger2"/>
                </GridLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_gravity="end">
<!--                       HEEEERRE-->

                </LinearLayout>
            </GridLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Edit profile"
                android:textColor="@color/black"
                android:drawableEnd="@drawable/head_arrowdown"
                android:background="@drawable/green"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/green"
                android:drawableEnd="@drawable/head_arrowdown"
                android:text="Change your password"
                android:textColor="@color/black"
                android:layout_margin="5dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/green"
                android:drawableEnd="@drawable/head_arrowdown"
                android:text="Security and privacy"
                android:textColor="@color/black"
                android:layout_margin="5dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/green"
                android:drawableEnd="@drawable/head_arrowdown"
                android:text="Change Email"
                android:textColor="@color/black"
                android:layout_margin="15dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/green"
                android:drawableEnd="@drawable/head_arrowdown"
                android:text="Push notifications "
                android:textColor="@color/black"
                android:layout_margin="5dp">
            </TextView>
            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@drawable/red"
                android:text="LOG OUT"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:onClick="logoutClick">
            </Button>
        </LinearLayout>
    </ScrollView>

<!--    Footer-->
    <GridLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/home_green">

        </ImageView>


        <ImageView
            android:id="@+id/menu"
            android:layout_width="38dp"
            android:layout_height="42dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginStart="30dp"
            android:src="@drawable/searchfood">

        </ImageView>

        <ImageView
            android:id="@+id/history"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:src="@drawable/history"
            android:layout_marginStart="20dp">

        </ImageView>

        <ImageView
            android:id="@+id/profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/profile">

        </ImageView>
    </GridLayout>
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent"
        >
        <ImageView
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:src="@drawable/yellow"
            android:layout_gravity="center">
        </ImageView>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
