<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:background="#E6F4F1">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:padding="10dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:src="@drawable/mark" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8720 Musuan"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_gravity="bottom"
                />

            <ImageView
                android:layout_margin="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:src="@drawable/head_arrowdown" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:contentDescription="TODO"
                android:src="@drawable/locate"
                android:layout_marginEnd="20dp"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/regis" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="Your Location"
                android:textColor="@android:color/black" />
        </GridLayout>

        <!-- Avatar -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:text="Type to Search"
                android:textSize="15dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:drawableStart="@android:drawable/ic_menu_search"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/yellow" />
        </LinearLayout>
    </LinearLayout>
<!--    Header -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Social Buttons -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/adds"
                        android:orientation="vertical"
                        android:scrollbars="horizontal"
                        android:layout_gravity="center">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rowCount="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Code "
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:background="@drawable/edit_background"
                                android:paddingStart="5dp"
                                android:paddingTop="0dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="0dp"
                                android:text="FIRST 40"
                                android:textColor="@color/black"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" at Checkout"
                                android:textStyle="bold"></TextView>
                        </GridLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hurry, offer end soon!"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hurry_offer_end_soon"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:background="@drawable/black"
                            android:text="ORDER NOW"
                            android:textColor="@android:color/holo_green_dark">

                        </Button>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="189dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/adds"
                        android:scrollbars="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="vertical">

                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:rowCount="2">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="User Code "
                                android:textStyle="bold">
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:background="@drawable/edit_background"
                                android:paddingStart="5dp"
                                android:paddingTop="0dp"
                                android:paddingEnd="5dp"
                                android:paddingBottom="0dp"
                                android:text="FIRST 40"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                >

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" at Checkout"
                                android:textStyle="bold">
                            </TextView>
                        </GridLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hurry, offer end soon!"
                                android:textStyle="bold">
                            </TextView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hurry_offer_end_soon"
                                android:textSize="20dp"
                                android:textStyle="bold">

                            </TextView>

                        </LinearLayout>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/black"
                            android:text="ORDER NOW"
                            android:textColor="@android:color/holo_green_dark"
                            android:layout_gravity="end|bottom">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

            </HorizontalScrollView>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="4">

                <ImageView
                    android:id="@+id/button2"
                    android:layout_width="78dp"
                    android:layout_height="76dp"
                    android:layout_columnWeight="0"
                    android:layout_gravity="start"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/yellow"
                    android:src="@drawable/burger3"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"

                    android:textStyle="bold">

                </ImageView>

                <ImageView
                    android:id="@+id/button3"
                    android:layout_width="78dp"
                    android:layout_height="76dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="0"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/yellow"
                    android:src="@drawable/pizza2"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </ImageView>

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="76dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_columnWeight="0"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/black"
                    android:src="@drawable/salad"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </ImageView>

                <ImageView
                    android:id="@+id/button"
                    android:layout_width="76dp"
                    android:layout_height="76dp"
                    android:layout_gravity="center"
                    android:background="@drawable/black"
                    android:src="@drawable/suzi"
                    android:textColor="@drawable/black"
                    android:textSize="16sp"
                    android:textStyle="bold">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_columnWeight="0"
                    android:layout_marginStart="15dp"
                    android:text="Burger"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:text="Pizza"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Salad"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sushi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="Popular Food"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="See All"
                    android:textColor="@color/black" />
            </GridLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Products_Recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:padding="10dp"
                />
        </LinearLayout>
    </ScrollView>

<!--Footer-->
    <GridLayout
        android:id="@+id/footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/home_green">

        </ImageView>


        <ImageView
            android:layout_width="38dp"
            android:layout_height="42dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginStart="30dp"
            android:src="@drawable/searchfood">

        </ImageView>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:src="@drawable/history">

        </ImageView>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/profile">

        </ImageView>
    </GridLayout>
    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="parent"
        >
        <ImageView
            android:layout_width="52dp"
            android:layout_height="49dp"
            android:src="@drawable/yellow"
            android:layout_gravity="center">
        </ImageView>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

